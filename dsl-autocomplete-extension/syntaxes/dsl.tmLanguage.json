{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Projeto DSL",
  "scopeName": "source.dsl",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#types"
    },
    {
      "include": "#validations"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#identifiers"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.dsl",
          "match": "//.*$"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.service.dsl",
          "match": "\\bservice\\b"
        },
        {
          "name": "keyword.control.entity.dsl",
          "match": "\\bentity\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "storage.type.dsl",
          "match": "\\b(string|uuid|integer|long|double|boolean|date|datetime|decimal)\\b"
        }
      ]
    },
    "validations": {
      "patterns": [
        {
          "name": "support.function.validation.dsl",
          "match": "\\b(min|max|notNull|notBlank)\\b"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.dsl",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.dsl",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.dsl",
          "match": "\\b[0-9]+\\b"
        }
      ]
    },
    "identifiers": {
      "patterns": [
        {
          "name": "variable.other.dsl",
          "match": "\\b[a-zA-Z_][a-zA-Z_0-9]*\\b"
        }
      ]
    }
  }
}